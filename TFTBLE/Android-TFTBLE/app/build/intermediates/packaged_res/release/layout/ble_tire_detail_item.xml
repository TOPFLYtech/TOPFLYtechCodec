<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MyAppTheme"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/device_list_border"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/ble_name"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/ble_id"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_ble_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/date"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/rssi"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_rssi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/device_model"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_device_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/battery"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_device_tire_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/tire_pressure"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_device_tire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_pressure_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="4"
                android:background="#8BC34A"
                android:text="Psi"
                android:textAllCaps="false"
                android:textSize="@dimen/list_tx">

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/temp"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <TextView
                android:id="@+id/tx_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_temp_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:background="#8BC34A"
                android:text="@string/temp_switch"
                android:textAllCaps="false"
                android:textSize="@dimen/list_tx">

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_high"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_item_margin_left"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="3"
                android:background="@color/bg_color_white"
                android:text="@string/status"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />

            <com.topflytech.tftble.view.MarqueeTextView
                android:id="@+id/tx_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:background="@color/bg_color_white"
                android:singleLine="true"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/list_tx" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>