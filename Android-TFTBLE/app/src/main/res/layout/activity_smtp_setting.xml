<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SmtpSettingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/smtp_server"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_smtp_server"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/smtp_port"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:inputType="numberSigned|numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_smtp_port"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/smtp_email"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_smtp_email"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/smtp_senders_name"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_smtp_senders_name"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/password"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_smtp_password"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color_white"
                    android:text="@string/recv_email"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/list_item_margin_left"
                    android:layout_weight="3"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_bg"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:layout_weight="2"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/et_recv_email"
                    android:textColor="@color/tx_black"
                    android:textSize="@dimen/btn_size" />

            </LinearLayout>　

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_item_high"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:text="@string/confirm"
                    android:layout_margin="12dp"
                    android:id="@+id/btn_smtp_submit">
                </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>